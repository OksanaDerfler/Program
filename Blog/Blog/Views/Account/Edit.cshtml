@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div style="border: solid 1px; padding: 10px; text-align:center">
        @Html.ActionLink("Вернуться на главную страницу", "Index", "Home")
        <form action="/Home/Edit" method="post" enctype="multipart/form-data">
            <input type="text" name="idrec" value="@ViewBag.record.Id" hidden="hidden"/>
            <h4 style="text-align:center">Изменить запись:</h4>

            <input type="text" name="title" value="@ViewBag.record.Title" />
            <p></p>
            <textarea name="textarea" style="width:450px ; height:200px">@ViewBag.record.Text</textarea>
            <p></p>
            <input type="text" name="tag" value="@ViewBag.record.Tag" />
            <p></p>

            @{
                if (!Convert.IsDBNull(@ViewBag.record.Picture))
                {  <div>
                    <img src="data:image;base64,@Convert.ToBase64String(@ViewBag.record.Picture)" style="margin-right: 310px; height:150px; width:150px" />
                </div>
                }
            }

            Сменить jpeg картинку <p></p> <input type="file" name="uplfile" />
            <p></p>
            <input type="submit" name="EditREcord" value="Изменить запись" />
        </form>
        <p></p>


    </div>
</body>
</html>
