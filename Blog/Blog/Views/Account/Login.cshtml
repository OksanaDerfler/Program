@model Blog.Models.LoginModel


@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/Site.css")


@{
    Layout = null;
}

@{
       ViewBag.Title = "Авторизация";
}

<div class="col-sm-offset-2">
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>
</div>

<div class="loginForm">
    <section id="loginForm">

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="row">
                <div class="col-sm-7">
                    <div class="col-sm-offset-1">
                        <div class="form-group">
                            <div class="col-sm-5">
                                @Html.LabelFor(m => m.UserName)
                            </div>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-7">
                    <div class="col-sm-offset-1">
                        <div class="form-group">
                            <div class="col-sm-5">
                                @Html.LabelFor(m => m.Password)
                            </div>
                            <div class="col-sm-7">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-offset-3">                    
                            @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })                            
                </div>
            </div>
            <div class="row">
                <div class="col-sm-offset-2">
                    <button role="button" type="submit" class="btn btn-success btn-lg">Вход</button> | <div class="btn btn-default btn-lg"><a href="@Url.Action("Index", "Home")">На главную</a></div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div class="col-sm-offset-4">
                        @*<div class="btn btn-default btn-lg">
                            <a href="@Url.Action("Register")">Зарегистрируйтесь, если у вас нет учетной записи</a>
                        </div>*@
                        @Html.ActionLink("Зарегистрируйтесь,", "Register") если у вас нет учётной записи
                    </div>
                </div>
            </div>
        }
    </section>

</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






