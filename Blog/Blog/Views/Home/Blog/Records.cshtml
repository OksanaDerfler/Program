@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllRecord</title>
</head>
<body>
    <div>
        @Html.ActionLink("Вернуться на главную", "Index", "Home")
        <h1>Записи:</h1> 
        @{
            //Вставка записей блогов
            foreach (var blogs in ViewBag.data)
            {
                string ss = "";
                ss = @blogs.Tag;

                string nickanme = "";
                nickanme = @blogs.Nick;

                string ID = "";
                ID = Convert.ToString(@blogs.Id);
                
                <div style="margin-bottom: 5px; padding: 5px; background-color: #fff; border: solid 1px rgba(0, 0, 0, 0.22)">
                    <div>
                        <div style="float: left">@Html.ActionLink("@" + nickanme, "NameRedirect", "Home", new { id = nickanme }, new { id = nickanme })</div>
                        <div style="float: right">@blogs.DateStart.ToString("d MMM yyyy")</div>
                    </div>
                    <h4>@blogs.Title</h4>
                    <p></p>
                    <p>@blogs.Text</p>

                    <div style="float:right">
                        Likes:
                        @{ string like = Convert.ToString(@blogs.Like);
                        @Html.ActionLink(" " + like, "LikeRecords", "Home", new { id = ID }, new { id = ID });
                        }

                    </div>

                    <div style="text-align:left">
                        @Html.ActionLink("#" + ss, "TagRedirect", "Home", new { id = ss }, new { id = ss })
                    </div>

                </div>



            }

        }
    </div>
</body>
</html>
